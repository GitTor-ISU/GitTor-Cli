{
    "editor.rulers": [80],
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-format.assumeFilename": ".c",
    "clang-format.fallbackStyle": "Google",
    "files.associations": {
        "stdio.h": "c",
        "unity.h": "c",
        "unity_internals.h": "c",
        "system_error": "c",
        "**/docs/report/*": "jinja",
        "cstdlib": "c",
        "array": "c",
        "string_view": "c",
        "type_traits": "c",
        "cmd.h": "c",
        "init.h": "c",
        "random": "c",
        "typeinfo": "c",
        "unistd.h": "c",
        "argp.h": "c",
        "string.h": "c",
        "errno.h": "c",
        "tempdir.h": "c",
        "limits.h": "c",
        "stddef.h": "c",
        "utils.h": "c"
    },
    "C_Cpp.default.defines": [
        "_GNU_SOURCE"
    ],
    "C_Cpp.default.includePath": [
        "./src",
        "./test"
    ]
}
