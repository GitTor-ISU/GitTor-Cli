{
    "editor.rulers": [80],
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-format.assumeFilename": ".c",
    "clang-format.fallbackStyle": "Google",
    "files.associations": {
        "**/docs/report/*": "jinja",
        "*.h": "c",
        "*.c": "c",
        "compare": "c",
        "cstdint": "c",
        "string": "c"
    },
    "C_Cpp.default.defines": [
        "_GNU_SOURCE"
    ],
    "C_Cpp.default.includePath": [
        "./src",
        "./test"
    ]
}
